= form_for @marked_point do |f|
  - if @marked_point.errors.any?
    #error_explanation
      %h2= "#{pluralize(@marked_point.errors.count, "error")} prohibited this marked_point from being saved:"
      %ul
        - @marked_point.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :submission
    = f.text_field :submission
  .field
    = f.label :rating_point
    = f.text_field :rating_point
  .actions
    = f.submit 'Save'
